<%- include('./partials/top.ejs') %>

  <h1 class="m-5 text-center">Users Detail</h1>
  <hr>
  <p><span>Username:</span> <%= user.username %> </p>
  <p><span>E-mail:</span><%= user.email %></p>
  <p><span>Role:</span><%= user.role %></p>
  <a href="/users/<%= user.id %>/edit" class="btn btn-secondary">edit</a>
  <a href="/users/<%= user.id %>/addService" class="btn btn-primary">add service</a>
  <hr>
  <h2>service list</h2>
  <hr>
  <table class="table">
    <thead>
      <tr>
        <th scope="col-5">Username</th>
        <th scope="col-5">Role</th>
        <th scope="col-2">Action</th>
      </tr>
    </thead>
    <tbody>
      <% services.forEach(el =>{ %>

        <tr>
          <td><%= el.username %></td>
          <td><%= el.role %></td>
          <td>
            <a href="/users/<%= el.id %>/detail" class="btn btn-secondary">Services</a>
            <a href="/users/<%= el.id %>/delete" class="btn btn-danger">Delete</a>
          </td>
        </tr>
      <% }) %>
      
  <img src="" alt="">
      
    </tbody>
  </table>
  
</body>
</html>